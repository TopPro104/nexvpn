{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "binaries/sing-box",
          "sidecar": true,
          "args": true
        },
        {
          "name": "binaries/xray",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "shell:allow-spawn",
    "shell:allow-stdin-write",
    {
      "identifier": "shell:allow-open",
      "allow": [
        { "url": "https://*" },
        { "url": "http://*" }
      ]
    },
    "deep-link:default"
  ]
}
