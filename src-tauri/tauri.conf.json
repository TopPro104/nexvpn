{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "NexVPN",
  "version": "1.1.0",
  "identifier": "com.horusvpn.nexvpn",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "NexVPN",
        "width": 960,
        "height": 640,
        "minWidth": 700,
        "minHeight": 500
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["nexvpn"]
      }
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "externalBin": [
      "binaries/sing-box",
      "binaries/xray"
    ],
    "publisher": "HorusVPN"
  }
}
